<div class="navbar">
  <h3>Simple Airbnb</h3>
  <%= link_to "Add a flat", new_flat_path, class:"btn btn-blue" %>
</div>



<div class="container">
  <h1>All our Flats (<%=@flats.count%>)</h1>
  <div class="flats">
    <% @flats.each do |flat|%>
      <div class="card-flat">
        <div class="details">
          <h3 class="form-group"><%= flat.name %></h3>
          <h4 class="form-group"><%= flat.address %></h4>
          <div class="form-group"> <i class="fas fa-users"></i> <%= flat.number_of_guests %> <i class="fas fa-euro-sign"></i> <%= flat.price_per_night %></div>
        </div>
        <div class="btns">
          <%= link_to "More infos", flat_path(flat), class:"btn btn-infos"%>
          <%= link_to "Edit", edit_flat_path(flat), class:"btn btn-edit"%>
          <%= link_to "Remove", flat_path(flat), method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-remove" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
